<% layout('layout/boilerplate') %>




    <div class="row">
        <h1 class="text-center">
            Edit Campground
        </h1>
        <div class="col-6 offset-3 mt-3 mb-3">
            <form action="/campground/<%=campground._id  %>?_method=PUT" method="POST" novalidate class="validate-form"
                enctype="multipart/form-data">
                <div class="mb-3 ">
                    <label for="title" class="form-label">Enter Title :</label>
                    <input type="text" name="campground[title]" id="title" class="form-control"
                        value="<%=campground.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mb-3">
                    <label for="location" class="form-label">Enter Location :</label>
                    <input type="text" name="campground[location]" id="location" class="form-control"
                        value="<%=campground.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3 custom-file">
                    <label for="image" class="form-label">Upload Images:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <label for="" class="custom-file-label"></label>
                    <div class="invalid-feedback">
                        This campground would look much better with a picture.
                    </div>
                    <!-- <label for="image" class="form-label">Image URL:</label>
                    <input type="file" name="image" id="" multiple> -->
                </div>


                <div class=" mb-3">
                    <label for="price" class="form-label">Campground Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>





                <div class=" mb-3">
                    <label for="textarea" class="form-label">Description :</label>
                    <textarea type="text" name="campground[description]" id="textarea" class="form-control"
                        required><%=campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <h6>Delete Images</h6>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% campground.image.forEach((img, i)=> { %>
                        <div class="col">
                            <div class="card">
                                <img class="card-img" src="<%= img.thumbnail%>" alt="<%=img.filename%> ">
                                <div class="card-img-overlay text-end pt-1 pe-2">
                                    <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                    <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                        value="<%= img.filename %>" id="image-<%= i %>">
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <div class=" col-6 mb-3">
                    <button class="btn btn-success"> submit</button>
                    <a href="/campground/<%=campground._id  %> " class="btn btn-primary ">Back</a>
                </div>

            </form>

        </div>

    </div>